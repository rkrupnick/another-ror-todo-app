<p style="color: green"><%= notice %></p>


<div class="tasks-container">
<div class="task-type">
  <h1 class="text-center">To Do</h1>
  <div class="task-box">
  <% @to_do.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
    
  <% end %>
  </div>
</div>

<div class="task-type">
<h1 class="text-center">Doing</h1>
   <div class="task-box">
  <% @doing.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
  <% end %>
  </div>
</div>

<div class="task-type">
<h1 class="text-center">Done</h1>
 <div class="task-box">
  <% @done.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
  <% end %>
  </div>
</div>
</div>

