<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<div id="tasks">
  <% @to_do.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
    <p>
      <%= link_to 'Mark as Doing', change_task_path(task, state: "doing"), method: :put %>
    </p>
  <% end %>
</div>

<div id="tasks">
  <% @doing.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
      <p>
      <%= link_to 'Mark as To do', change_task_path(task, state: "to_do"), method: :put %>
    </p>
      <p>
      <%= link_to 'Mark as Done', change_task_path(task, state: "done"), method: :put %>
    </p>
  <% end %>
</div>

<div id="tasks">
  <% @done.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
      <p>
      <%= link_to 'Mark as Doing', change_task_path(task, state: "doing"), method: :put %>
    </p>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>
